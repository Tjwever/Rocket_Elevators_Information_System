<!-- CONTACT -->
<section id="contact">
	<div class="container">
		<header class="text-center mb-60">
			<h2>Contact Us</h2>
			<hr />
		</header>

		<div class="row">			
			<div class="col-md-8 col-sm-8">
				<p class="text-muted text-info">
					Ready to start your next project with us? Give us a call or send us an email and we will get back to you as soon as possible!
				</p>

				<!-- MESSAGES -->
				<!-- Alert Success -->
				<div id="alert_success" class="alert alert-success mb-30">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> 
          <strong>Thank You!</strong> Your message successfully sent! 
        </div>

				<!-- Alert Failed -->
				<div id="alert_failed" class="alert alert-danger mb-30">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times; </button>
					<strong>[SMTP] Error!</strong> Internal server error!
				</div>

				<!-- Alert Mandatory -->
				<div id="alert_mandatory" class="alert alert-danger mb-30">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times; </button>
					<strong>Sorry!</strong> You need to complete all mandatory (*) fields!
				</div>


      <!-- FORM -->
        <%= form_tag("/contact-us", id: "displayCost", method: "post") do %>
					<fieldset>
						<input type="hidden" name="action" value="contact_send" />

						<div class="row">

							<div class="col-6">
								<label for="contact:name">Full Name *</label>
								<input required type="text" value="" class="form-control" name="fullName" id="contact:name"/>
							</div>

							<!-- business name -->
							<div class="col-6">
								<label for="contact:name-business">Business Name</label>
								<input type="text" value="" class="form-control" name="companyName" id="contact:name-business"/>
							</div>

							<!-- fin b-name -->
							<div class="col-6">
								<label for="contact:email">E-mail Address *</label>
								<input required type="email" value="" class="form-control" name="email" id="contact:email"/>
							</div>

							<div class="col-6">
								<label for="contact:phone">Phone</label>
								<input type="text" value="" class="form-control" name="phone" id="contact:phone"/>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6">
								<label for="contact: projectName">Project Name *</label>
								<input required type="text" value="" class="form-control" name="projectName" id="contact: projectName"/>
							</div>

							<div class="col-md-6">
								<label for="contact: projectDescription">Project Description *</label>
								<input required type="text" value="" class="form-control" name="projectDescription" id="contact:projectDescription"/>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6">
								<label for="contact_department">Department</label>
								<select class="form-control pointer" name="department">
									<option value="">--- Select the service please ---</option>
									<option value="Marketing">Sales</option>
									<option value="Webdesign">customers services</option>
									<option value="Architecture">Administration</option>
								</select>
							</div>

							<div class="col-md-6">
								<label for="contact:subject">Subject *</label>
								<input required type="text" value="" class="form-control" name="subject" id="contact:subject">
							</div>
						</div>

						<div class="row">
							<div class="col-md-12">
								<label for="contact:message">Message *</label>
								<textarea required maxlength="10000" rows="8" class="form-control" name="message" id="contact:message"></textarea>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12">
								<label for="contact:attachment">File Attachment</label>
								<!-- custom file upload -->
								<input class="custom-file-upload" type="file" id="file" name="attachedFile" id="contact:attachment" data-btn-text="Select a File"/>
								<small class="text-muted block">Max file size: 10Mb (zip/pdf/jpg/png)</small>
							</div>
						</div>


					</fieldset>

					<div class="row align-items-center">
						<div class="col-md-3  " ></div>
						<div class="col-md-6  " >
							<button  type="submit" class="btn btn-block btn-danger" style="cursor: default"> <i class="fa fa-check"></i> SEND MESSAGE </button>
            </div>
						<div class="col-md-3  " ></div>
					</div>
        <% end %>
			</div>
			<!-- /FORM -->


			<!-- INFO -->
			<div class="col-md-4 col-sm-4">
				<h2 class="text-info">VISIT US !</h2>

				<!--Google map-->
					<div id="map-container-google-11" class="z-depth-1-half map-container-6" style="height: 590px">
						<iframe src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=725%20Boulevard%20Lebourgneuf,%20Qu%C3%A9bec,%20QC%20G2J%200C4+(Rocket%20Elevators)&amp;t=&amp;z=17&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"
						frameborder="0" style="border:0" allowfullscreen></iframe>
					</div>
				<hr />

				<p class="text-info">
					<span class="block text-info"><strong><i class="fa fa-map-marker"></i> Address:</strong>
						418-725 Boulevard Lebourgneuf, Qu√©bec,  G2J 0C4, Canada</span>
					<span class="block"><strong><i class="fa fa-phone"></i> Phone:</strong>
						<a href="tel: (581) 701-0303"> (581) 701-0303</a></span>
					<span class="block"><strong><i class="fa fa-envelope"></i> Email:</strong>
						<a href="Contactez-nous info@codeboxx.biz"> Contactez-nous info@codeboxx.biz</a>
          </span>
				</p>
			</div>
			<!-- /INFO -->
		</div>
	</div>
</section>
<!-- /CONTACT -->